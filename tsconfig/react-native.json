{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"jsx": "react-native",
		"lib": ["DOM", "ESNext"],
		"module": "preserve",
		"types": ["react-native"],
		"customConditions": ["react-native"],

		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
